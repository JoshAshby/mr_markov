%table.table.table-hover
  %thead.thead-inverse
    %tr
      %th Order
      %th
      %th Processor Name
      %th Actions

  %tbody
    - frames.each_with_index do |frame, idx|
      %tr
        %td= frame.position
        %td
          .btn-group
            %a.btn.btn-sm.btn-secondary-outline{ class: [ ('disabled' if idx == 0) ], href: "/frames/#{ frame.id }/move_up", data: { method: 'post' } }
              %i.fa.fa-chevron-up
            %a.btn.btn-sm.btn-secondary-outline{ class: [ ('disabled' if idx == (frames.count - 1)) ], href: "/frames/#{ frame.id }/move_down", data: { method: 'post' } }
              %i.fa.fa-chevron-down

        %td= frame.processor.capitalize
        %td
          %a.btn.btn-primary-outline{ href: "/frames/#{ frame.id }/edit" }
            Edit
          %a.btn.btn-danger-outline{ href: "/frames/#{ frame.id }", data: { method: 'delete', confirm: 'Are you sure you want to delete this frame?' } }
            Delete
